<?xml version="1.0" encoding="utf-8"?><!--    list_item_gallery_gallery.xml   -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" android:src="@drawable/icon_question"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/item_selected_img"  />

    <ImageView
        android:id="@+id/item_selected_img"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_margin="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:scaleType="centerCrop" android:src="@drawable/ic_cab_done_holo_dark" android:padding="@dimen/dim30dp" />
</RelativeLayout>

