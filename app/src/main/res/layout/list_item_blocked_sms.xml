<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="5dp"
    android:gravity="center_vertical" android:orientation="horizontal">

    <TextView
        android:id="@+id/textViewSerialNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="10. "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="left" android:layout_alignParentLeft="true"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_toRightOf="@+id/textViewSerialNo">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Some SMS Content which will be replaced Some SMS Content which will be replaced"
            android:maxLines="1"
            android:maxLength="50"
            android:id="@+id/textViewSMS"  />

        <TextView
            android:id="@+id/textViewNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="+8801752787376"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="1"
            android:textColor="@color/purple"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/12/2016, 10:10:10 AM"
            android:id="@+id/textViewDateTime" />

    </LinearLayout>

</RelativeLayout>